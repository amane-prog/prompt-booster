{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [ "dom", "dom.iterable", "esnext" ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "paths": { "@/*": [ "./*" ] },
    "types": [ "node", "react", "react-dom", "next" ],

    "allowJs": true,
    "incremental": false,

    "plugins": [ { "name": "next" } ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/*.d.ts"
  ],
  "exclude": [ "node_modules" ]
}
